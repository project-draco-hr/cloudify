{
  File extendedServiceFile=new File(extendedServicePath);
  if (!extendedServiceFile.isAbsolute() && !extendedServiceFile.exists())   extendedServiceFile=new File(recipeFile.getParent() + "/" + extendedServicePath);
  if (extendedServiceFile.isDirectory())   extendedServiceFile=DSLReader.findDefaultDSLFile(DSLReader.SERVICE_DSL_FILE_NAME_SUFFIX,extendedServiceFile);
  return extendedServiceFile;
}
