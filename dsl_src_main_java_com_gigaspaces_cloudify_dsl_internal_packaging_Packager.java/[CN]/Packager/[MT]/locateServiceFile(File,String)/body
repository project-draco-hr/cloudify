{
  File extendedServiceFile=new File(extendedServicePath);
  if (!extendedServiceFile.isAbsolute())   extendedServiceFile=new File(recipeFile.getParent() + "/" + extendedServicePath);
  if (extendedServiceFile.isDirectory())   extendedServiceFile=ServiceReader.findServiceFile(extendedServiceFile);
  return extendedServiceFile;
}
