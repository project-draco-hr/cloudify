{
  File localTemplatesFolder=ServiceReader.unzipCloudTemplatesFolder(copyMultipartFileToLocalFile(templatesFolder));
  try {
    String hostAddress=InetAddress.getLocalHost().getHostAddress();
    logger.log(Level.INFO,"addTemplatesInternal - adding templates to rest host: " + hostAddress + ", templates folder: "+ localTemplatesFolder.getAbsolutePath());
    return successStatus(addTemplatesToCloud(localTemplatesFolder,hostAddress));
  }
  finally {
    localTemplatesFolder.delete();
  }
}
