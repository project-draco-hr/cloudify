{
  Cloud cloud=null;
  if (cloudFile != null) {
    if (cloudFile.isFile()) {
      try {
        cloud=ServiceReader.readCloud(cloudFile);
      }
 catch (      final DSLException e) {
        throw new IllegalArgumentException("Cloud configuration file: " + cloudFile + " could not be parsed: "+ e.getMessage(),e);
      }
    }
 else {
      throw new IllegalArgumentException(cloudFile + " is not a file");
    }
  }
  return cloud;
}
