{
  if (config.getProvider().getLocalDirectory() != null && !new File(config.getProvider().getLocalDirectory()).isAbsolute()) {
    logger.info("Assuming " + config.getProvider().getLocalDirectory() + " is in "+ Environment.getHomeDirectory());
    config.getProvider().setLocalDirectory(new File(Environment.getHomeDirectory(),config.getProvider().getLocalDirectory()).getAbsolutePath());
  }
}
