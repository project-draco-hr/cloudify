{
  final InstallationDetails[] details=new InstallationDetails[numOfManagementMachines];
  final GSAReservationId reservationId=null;
  for (int i=0; i < details.length; i++) {
    final ExactZonesConfig zones=new ExactZonesConfigurer().addZone(MANAGEMENT_GSA_ZONE).create();
    details[i]=Utils.createInstallationDetails(machineDetails[i],cloud,template,zones,null,null,true,this.cloudFile,reservationId,cloud.getConfiguration().getManagementMachineTemplate(),securityProfile,keystorePassword);
  }
  return details;
}
