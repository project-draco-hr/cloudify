{
  this.puName=clusterInfo.getName();
  this.instanceId=clusterInfo.getInstanceId();
  if (puName != null) {
    final String serviceName=ServiceUtils.getFullServiceName(puName).getServiceName();
    this.eventLogger=java.util.logging.Logger.getLogger(USMLifecycleBean.class.getPackage().getName() + ".USMEventLogger." + serviceName);
  }
 else {
    this.eventLogger=java.util.logging.Logger.getLogger(USMLifecycleBean.class.getPackage().getName() + ".USMEventLogger.USM");
  }
}
