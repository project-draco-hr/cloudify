{
  try {
    targetURI=new java.net.URI("smb",details.getUsername() + ":" + details.getPassword(),host,CIFS_PORT,details.getRemoteDir(),null,null).toASCIIString();
  }
 catch (  final URISyntaxException e) {
    throw new InstallerException("Failed to initialize file transfer: " + e.getMessage(),e);
  }
}
