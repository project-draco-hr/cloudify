{
  this.cloud=cloud;
  this.cloudTemplateName=cloudTemplateName;
  this.management=management;
  logger.fine("Initializing Cloud Provisioning - management mode: " + management + ". Using template: "+ cloudTemplateName+ " with cloud: "+ cloud);
  this.cloudName=cloud.getName();
  String prefix=(management ? cloud.getProvider().getManagementGroup() : cloud.getProvider().getMachineNamePrefix());
  if ((prefix == null) || (prefix.length() == 0)) {
    if (management) {
      prefix="cloudify_managememnt_";
    }
 else {
      prefix="cloudify_agent_";
    }
    logger.warning("Prefix for machine name was not set. Using: " + prefix);
  }
  this.machineNamePrefix=prefix;
}
