{
  String absolutePUName=ServiceUtils.getAbsolutePUName(applicationName,serviceName);
  String usmUrl="ProcessingUnits/Names/" + absolutePUName + "/Instances/0/Statistics/"+ "Monitors/"+ CloudifyConstants.USM_MONITORS_SERVICE_ID;
  try {
    Map<String,Object> adminData=client.getAdminData(usmUrl);
    if (adminData.containsKey("Id") && adminData.get("Id").equals(CloudifyConstants.USM_MONITORS_SERVICE_ID)) {
      return true;
    }
 else     if (adminData.containsKey(CloudifyConstants.USM_MONITORS_SERVICE_ID) && adminData.get(CloudifyConstants.USM_MONITORS_SERVICE_ID).equals("<null>")) {
      return false;
    }
  }
 catch (  RestException e) {
  }
  return false;
}
