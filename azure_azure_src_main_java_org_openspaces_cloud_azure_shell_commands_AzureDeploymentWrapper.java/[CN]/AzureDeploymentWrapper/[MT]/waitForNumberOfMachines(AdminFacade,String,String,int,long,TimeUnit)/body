{
  createConditionLatch(timeout,timeunit).waitFor(new ConditionLatch.Predicate(){
    @Override public boolean isDone() throws CLIException {
      int currentNumberOfMachines=adminFacade.getInstanceList(applicationName,serviceName).size();
      if (currentNumberOfMachines == numberOfMachines) {
        return true;
      }
      logger.log(Level.INFO,"Currently running: " + currentNumberOfMachines + " instances of service "+ serviceName+ "\nWaiting for: "+ numberOfMachines+ " instances");
      return false;
    }
  }
);
}
