    xmlRequest=MicrosoftAzureModelUtils.marshall(operation,false);
  }
 catch (  MicrosoftAzureException e) {
    throw new MicrosoftAzureException(e);
  }
  ClientResponse response=doPost(subscriptionId + "/services/hostedservices/" + serviceName+ "/deployments/"+ deploymentName+ "/roleinstances/"+ roleName+ "/operations",xmlRequest);
