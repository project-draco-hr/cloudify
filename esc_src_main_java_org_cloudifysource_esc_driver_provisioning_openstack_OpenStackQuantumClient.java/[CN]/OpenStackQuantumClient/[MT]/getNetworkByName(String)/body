{
  if (logger.isLoggable(Level.FINE)) {
    logger.fine("Requesting networks list");
  }
  final String response=this.getWebResource().path("networks").queryParam("name",networkName).type(MediaType.APPLICATION_JSON_TYPE).accept(MediaType.APPLICATION_JSON).header("X-Auth-Token",this.getTokenId()).get(String.class);
  final List<Network> networks=JsonUtils.unwrapRootToList(Network.class,response);
  if (networks == null || networks.isEmpty()) {
    return null;
  }
  return networks.get(0);
}
