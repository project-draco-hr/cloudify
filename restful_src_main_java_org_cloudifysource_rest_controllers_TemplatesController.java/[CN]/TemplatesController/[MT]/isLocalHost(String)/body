{
  String localhost;
  logger.log(Level.INFO,"[isAddTemplateToSelf] - checking if " + hostAddress + " is local host.");
  try {
    localhost=InetAddress.getLocalHost().getHostAddress();
  }
 catch (  final UnknownHostException e) {
    logger.log(Level.WARNING,"[isAddTemplateToSelf] - failed to get local host address, returning false." + " Error message: " + e.getMessage(),e);
    return false;
  }
  final boolean equals=localhost.equals(hostAddress);
  if (!equals) {
    logger.log(Level.INFO,"[isAddTemplateToSelf] - the host to check [" + hostAddress + "] is not the local host ["+ localhost+ "].");
  }
  return equals;
}
