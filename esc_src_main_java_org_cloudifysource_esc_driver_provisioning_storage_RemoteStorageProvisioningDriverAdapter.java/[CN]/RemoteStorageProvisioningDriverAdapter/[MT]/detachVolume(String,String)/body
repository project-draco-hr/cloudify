{
  try {
    storageProvisioningDriver.detachVolume(volumeId,ip,DEFAULT_STORAGE_OPERATION_TIMEOUT * 2,TimeUnit.MILLISECONDS);
  }
 catch (  final Exception e) {
    logSevere(e);
    throw new RemoteStorageOperationException("Failed detaching volume with id " + volumeId + " to instance with ip "+ ip,e);
  }
}
