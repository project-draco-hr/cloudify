{
  DocController controller=new DocController(classDoc.typeName());
  List<DocAnnotation> annotations=generateAnnotations(classDoc.annotations());
  if (Utils.filterOutControllerClass(classDoc,annotations))   return null;
  controller.setUri(Utils.getRequestMappingAnnotation(annotations).getValue());
  controller.setMethods(generateMethods(classDoc.methods()));
  controller.setDescription(classDoc.commentText());
  if (StringUtils.isBlank(controller.getUri()))   throw new IllegalArgumentException("controller class " + controller.getName() + " is missing request mapping annotation's value (uri).");
  if (controller.getMethods().isEmpty())   throw new IllegalArgumentException("controller class " + controller.getName() + " doesn't have methods.");
  return controller;
}
