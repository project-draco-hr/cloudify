{
  if (componentName != null) {
    try {
      final Map<String,Object> instanceIdToHost=adminFacade.getInstanceList(getCurrentApplicationName(),componentName);
      return instanceIdToHost.keySet();
    }
 catch (    final Exception e) {
      logger.warning("Could not fetch instance list for service " + componentName + ":"+ e.getMessage());
      return null;
    }
  }
  return null;
}
