{
  String str="@" + name;
  if (attributes != null && attributes.size() > 0) {
    StringBuilder attrStr=new StringBuilder();
    for (    Entry<String,Object> entry : attributes.entrySet()) {
      attrStr.append(entry.getKey()).append("=").append(entry.getValue().toString()).append(", ");
    }
    if (attrStr.length() == 0)     str+=" {No attributes}";
 else     str+=" {" + attrStr.substring(0,str.lastIndexOf(',')) + "}";
  }
  return str;
}
