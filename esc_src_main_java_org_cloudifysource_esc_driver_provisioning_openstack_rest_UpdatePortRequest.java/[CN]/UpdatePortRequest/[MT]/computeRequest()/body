{
  final StringBuilder sb=new StringBuilder();
  sb.append("{\"port\":{");
  if (!securityGroupIds.isEmpty()) {
    sb.append("\"security_groups\":[");
    for (    String sg : securityGroupIds) {
      sb.append("\"" + sg + "\",");
    }
    sb.setLength(sb.length() - 1);
    sb.append("]");
  }
  sb.append("}}");
  return sb.toString();
}
