{
  ManualCapacityScaleConfig config=new ManualCapacityScaleConfigurer().memoryCapacity(totalMemoryInMB,MemoryUnit.MEGABYTES).numberOfCpuCores(totalCpuCores).create();
  if (!shared) {
    config.setAtMostOneContainerPerMachine(true);
  }
  config.setGridServiceAgentZonesAware(locationAware);
  return config;
}
