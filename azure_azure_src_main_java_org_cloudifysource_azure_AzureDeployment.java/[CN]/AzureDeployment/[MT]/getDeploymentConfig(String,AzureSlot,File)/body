{
  String cfg=executeAzureConfig(argument(GET_DEPLOYMENT_CONFIG_FLAG),argument(HOSTED_SERVICE_FLAG,hostedService),argument(SLOT_FLAG,slot.getSlot()));
  BufferedWriter out=null;
  try {
    try {
      out=new BufferedWriter(new OutputStreamWriter(new FileOutputStream(outputCscfgFile.getAbsolutePath())));
      out.write(cfg);
    }
  finally {
      if (out != null) {
        out.close();
      }
    }
  }
 catch (  IOException e) {
    throw new AzureDeploymentException(e);
  }
  try {
    return new AzureDeploymentConfigurationFile(outputCscfgFile);
  }
 catch (  XMLXPathEditorException e) {
    throw new AzureDeploymentException(e);
  }
}
