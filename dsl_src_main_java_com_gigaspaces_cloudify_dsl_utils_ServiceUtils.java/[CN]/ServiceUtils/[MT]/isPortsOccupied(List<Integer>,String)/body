{
  Socket sock=null;
  int portCounter=0;
  for (  int port : portList) {
    try {
      sock=new Socket();
      logger.fine("Checking port " + port);
      sock.connect(new InetSocketAddress(hostName,port));
      logger.fine("Connected to port " + port);
      sock.close();
      portCounter++;
      if (portCounter == portList.size()) {
        return true;
      }
    }
 catch (    IOException e) {
      return false;
    }
 finally {
      try {
        sock.close();
      }
 catch (      IOException e) {
      }
    }
  }
  return false;
}
