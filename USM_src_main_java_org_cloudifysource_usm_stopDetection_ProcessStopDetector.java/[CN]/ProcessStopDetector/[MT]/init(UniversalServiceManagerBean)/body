{
  super.init(usm);
  final String setting=((DSLConfiguration)usm.getUsmLifecycleBean().getConfiguration()).getService().getCustomProperties().get(CloudifyConstants.CUSTOM_PROPERTY_STOP_DETECTION_ON_ALL_PROCESSES);
  if (setting != null) {
    this.stopOnAllProcessesDead=Boolean.parseBoolean(setting);
  }
}
