{
  if (context == null) {
    final ClusterInfo info=createClusterInfo();
    final File dir=new File(".");
    final File dslFile=new File(dir,System.getenv(CloudifyConstants.USM_ENV_SERVICE_FILE_NAME));
    Service service;
    try {
      service=ServiceReader.readService(dslFile);
    }
 catch (    PackagingException e) {
      throw new IllegalArgumentException("Failed to read service",e);
    }
catch (    DSLException e) {
      throw new IllegalArgumentException("Failed to read service",e);
    }
    context=new ServiceContext();
    context.init(service,getAdmin(),new File(".").getAbsolutePath(),info);
  }
  return context;
}
